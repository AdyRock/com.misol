            "values": [
                {
                    "id": "0",
                    "label": {
                        "en": "Non-rechargeable",
                        "nl": "Niet oplaadbaar"
                    }
                },
                {
                    "id": "1",
                    "label": {
                        "en": "Rechargeable",
                        "nl": "Oplaadbaar"
                    }
                }
            ]
        }
    ],
    "images": {
        "small": "/drivers/soil_moisture/assets/images/small.png",
        "large": "/drivers/soil_moisture/assets/images/large.png"
