{
    "name": {
        "en": "Soil Moisture",
        "nl": "Bodemvocht"
    },
    "platforms": [
        "local"
    ],
    "connectivity": [
        "lan"
    ],
    "class": "sensor",
    "capabilities": [
        "measure_battery",
        "measure_moisture"
    ],
    "energy": {
        "batteries": [
            "AA"
        ]
    },
    "pair": [
        {
            "id": "list_my_devices",
            "template": "list_devices",
            "navigation": {
                "next": "add_my_devices"
            }
        },
        {
            "id": "add_my_devices",
            "template": "add_devices"
        }
    ],
    "settings": [
        {
            "id": "batteryType",
            "type": "dropdown",
            "label": {
                "en": "Battery Type",
